@model MainProjectViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Список проектов</h2>

@if (Model.Projects.Count() == 0)
{
    <p>Никаких проектов нет</p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].EmployeeMaster)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Projects) {
        <tr class="trProject">
            <td style="cursor: pointer;" onclick=@string.Format("window.location.href='/Projects/Details?projectId={0}'; return false", item.Id)>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    @if (item.EmployeeMaster == null)
                    {
                        <form asp-controller="Projects" asp-action="AssigneEmployee" asp-route-projectId=@item.Id asp-route-isMaster=@true >
                            <select asp-for="EmployeeId" 
                                asp-items="@Model.Employees">
                                <option>Выберете сотрудника</option>
                             </select>
                            <p>
                            <input type="submit" value="Сохранить" />
                            </p>
                        </form> 
                    }
                    else
                    {
                        <a asp-controller="Employees" asp-action="Details" asp-route-empId="@item.EmployeeMaster.Id">@Html.DisplayFor(modelItem => item.EmployeeMaster.LastName) @Html.DisplayFor(modelItem => item.EmployeeMaster.FirstName)</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
}




