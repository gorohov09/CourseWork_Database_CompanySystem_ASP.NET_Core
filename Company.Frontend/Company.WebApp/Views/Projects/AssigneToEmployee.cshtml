@model AssigneToEmployeeViewModel

@{
    ViewData["Title"] = "Сотрудники";
}

<h2>Список сотрудников</h2>

@if (Model.Employees.Count == 0)
{
    
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].CountProjects)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountProjects)
            </td>
        </tr>
}
    </tbody>
</table>
}


@if (Model.IsMaster)
{
    <h3>Выберите Id сотрудника, которого хотите назначить ГЛАВНЫМ на проект и введите в форму</h3>
}
else
{
   <h3>Выберите Id сотрудника, которого хотите назначить на проект и введите в форму</h3> 
}

<form method="post" asp-controller="Projects" asp-action="AssigneToEmployee" asp-route-projectId=@ViewBag.ProjectId asp-route-isMaster=@Model.IsMaster>
    <label>Id сотрудника:</label><br />
    <input type="number" name="employeeId" /><br />
    <input type="submit" value="Отправить" />
</form>
