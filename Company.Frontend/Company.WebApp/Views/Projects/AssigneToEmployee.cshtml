@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Сотрудники";
}

<h2>Список сотрудников</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountProjects)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountProjects)
            </td>
        </tr>
}
    </tbody>
</table>

<h3>Выберите Id сотрудника, которого хотите назначить на проект и введите в форму</h3>
<form method="post" asp-controller="Projects" asp-action="AssigneToEmployee" asp-route-projectId=@ViewBag.ProjectId>
    <label>Id сотрудника:</label><br />
    <input type="number" name="employeeId" /><br />
    <label>Назначить главным на проекте?</label> <br />
    <input name="isMaster" type="checkbox" value="true" />
    <input type="submit" value="Отправить" />
    <input name="isMaster" type="hidden" value="false" /> 
</form>
