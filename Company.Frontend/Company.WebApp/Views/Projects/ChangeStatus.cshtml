@model ChangeStatusViewModel

@{
    ViewData["Title"] = "Изменить статус";
}

<h3>Введите новый статус(ОТКРЫТО, В ПРОГРЕССЕ, ЗАКРЫТО)</h3>

<form asp-action="ChangeStatus" asp-route-ProjectId="@Model.ProjectId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewStatus" class="control-label"></label>
                <input asp-for="NewStatus" class="form-control" />
                <span asp-validation-for="NewStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
</form>

<div>
    <a asp-action="Index" asp-route-projectId="@Model.ProjectId">Назад к задаче</a>
</div>