@model LogTimeViewModel

@{
    ViewData["Title"] = "Залогировать время";
}

<h3>Залогируйте время в формате(1d 1h 1m)</h3>

<form asp-action="LogTime" asp-route-ProjectId="@Model.ProjectId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LogTime" class="control-label"></label>
                <input asp-for="LogTime" class="form-control" />
                <span asp-validation-for="LogTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
</form>

<div>
    <a asp-action="Index" asp-route-projectId="@Model.ProjectId">Назад к задаче</a>
</div>